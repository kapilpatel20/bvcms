{% extends "BvCmsBundle::base.html.twig" %}
{% block body %}

    <section class="content-header">
        <h1 class="mainTitle text-uppercase">
            VIEW CMS PAGE DETAIL
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="{#{ path('dashboard') }#}">
                    <i class="fa fa-dashboard"></i>
                    Dashboard
                </a>
            </li>
            <li>
                <a href="{{ path('bv_cms_list')}}">Manage Cms Pages</a>
            </li>
            <li class="active">
                View CMS Page Detail
            </li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-lg-12">
                <div class="box box-primary">
                    <div class="box-body">
                        	<div class="row">
                        		<div class="col-md-12">
	                        		<h5>Name:</h5>
                                               <p> {{ page.name }}</p>
                                        </div>
                                        
                                        <div class="col-md-12">
                        			<h5>Slug:</h5>
                        			<p>{{ page.slug }}</p>
                        		</div>
                                        
                        		<div class="col-md-12">
                        			<h5>Content:</h5>
                        			<p>{{ page.content | raw }}</p>
                        		</div>
                        			
                        	</div>
                        	
                        </div>
                </div>
            </div>
        </div>
    </section>

{% endblock body %}