<!-- Main content -->
<section class="content">
        {% include "BvCmsBundle::flashMessage.html.twig" %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">CMS Pages List</h3>
        </div><!-- /.box-header -->
    
    </div>

    <div class="box">
